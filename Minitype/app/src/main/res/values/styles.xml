<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textViewStyle">@style/BodyTextTheme</item>
    <item name="android:buttonStyle">@style/ButtonTheme</item>
  </style>

  <!-- Text style theme -->
  <style name="BodyTextTheme">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textSize">16sp</item>
  </style>

  <!-- Button style theme -->
  <style name="ButtonTheme">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">#FF9900</item>
  </style>

  <style name="KeyTheme">
    <item name="android:paddingTop">7dp</item>
    <item name="android:paddingBottom">7dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">monospace</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/shape</item>
    <item name="android:layout_weight">1</item>
    <item name="android:onClick">keystroke</item>
  </style>

  <style name="SuggestTheme">
    <item name="android:lines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:paddingTop">1dp</item>
    <item name="android:paddingBottom">1dp</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">12sp</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/shape</item>
    <item name="android:layout_weight">1</item>
    <item name="android:onClick">keystroke</item>
  </style>

  <style name="StatTheme">
    <item name="android:padding">2dp</item>
    <item name="android:layout_marginLeft">48dp</item>
    <item name="android:textSize">6sp</item>
  </style>

</resources>
